
bool palind(int st, int end, string &str){

    while(st < end){

        if(str[st] != str[end]) return false;

        st++;

        end--;

    }

    return true;

}

 

int minCharsforPalindrome(string str) {

    int n = str.size();

    int i = n-1;

    while(i>0){

        if(str[i] == str[0]){

            if(palind(0,i,str)){

                return n-1 - i;

            }

        }

        i--;

    }

    return n-1;

}

